@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="body-sign">
    <div class="center-sign">
        <a href="/" class="logo float-left">
            <img src="~/img/logo.png" height="54" alt="NuvoMar Admin" />
        </a>

        <div class="panel card-sign">
            <div class="card-title-sign mt-3 text-right">
                <h2 class="title text-uppercase font-weight-bold m-0"><i class="fas fa-user mr-1"></i> Login</h2>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                {
                    <div class="row pb-4">
                        <div class="col-sm">
                            <label>Username</label>
                            <input name="UsrUserName" type="text" class="form-control form-control-lg" />
                        </div>
                    </div>

                    <div class="row pb-4">
                        <div class="col-sm">
                            <label>Password</label>
                            <input name="UsrPassword" type="password" class="form-control form-control-lg" />
                        </div>
                    </div>

                    <div class="row pt-1">
                        <div class="col-sm-4 text-left">
                            <button type="submit" class="btn btn-primary mt-2">Login</button>
                        </div>
                    </div>
                }
            </div>
        </div>

        <p class="text-center text-muted mt-3 mb-3">&copy; Copyright @DateTime.Now.ToString() All Rights Reserved.</p>
    </div>
</section>

